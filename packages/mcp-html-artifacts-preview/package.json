{
  "name": "@mizunashi_mana/mcp-html-artifacts-preview",
  "version": "0.1.0",
  "description": "MCP server for previewing AI-generated HTML artifacts in the browser",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-html-artifacts-preview": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run --passWithNoTests",
    "test:update": "vitest run --update --passWithNoTests",
    "lint:eslint": "eslint --cache --fix src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "html",
    "preview",
    "artifacts"
  ],
  "license": "Apache-2.0 OR MPL-2.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@mcp-html-artifacts-preview/eslint-config": "*",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "typescript": "^5.5.0",
    "vitest": "^4.0.0"
  }
}
