{
  "name": "@mizunashi_mana/mcp-html-artifacts-preview",
  "version": "1.0.0",
  "description": "MCP server for previewing AI-generated HTML artifacts in the browser",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-html-artifacts-preview": "./dist/cli.js"
  },
  "files": [
    "dist",
    "LICENSE-APACHE",
    "LICENSE-MPL"
  ],
  "scripts": {
    "prepack": "cp ../../README.md ../../LICENSE ../../LICENSE-APACHE ../../LICENSE-MPL .",
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json && node dist/cli.js",
    "dev:watch": "tsc -p tsconfig.build.json --watch",
    "test": "vitest run",
    "test:update": "vitest run --update",
    "lint:eslint": "eslint --cache --fix src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "html",
    "preview",
    "artifacts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mizunashi-mana/mcp-html-artifacts-preview",
    "directory": "packages/mcp-html-artifacts-preview"
  },
  "homepage": "https://github.com/mizunashi-mana/mcp-html-artifacts-preview",
  "license": "Apache-2.0 OR MPL-2.0",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "provenance": true
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@mcp-html-artifacts-preview/eslint-config": "*",
    "@types/node": "^25.2.3",
    "eslint": "^10.0.2",
    "typescript": "^5.5.0",
    "vitest": "^4.0.0"
  }
}
