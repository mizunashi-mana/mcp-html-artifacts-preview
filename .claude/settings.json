{
  "permissions": {
    "allow": [
      "Bash(npm run build:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run typecheck:*)"
    ],
    "deny": [
      "Bash(pnpm:*)",
      "Bash(yarn:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "^(Write|MultiEdit|Edit|Update)$",
        "hooks": [
          {
            "type": "command",
            "command": "cc-edit-lint-hook"
          }
        ]
      }
    ]
  }
}